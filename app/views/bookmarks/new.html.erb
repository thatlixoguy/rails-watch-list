<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="mb-4">Add a movie to <%= @list.name %></h2>

          <%= simple_form_for [@list, @bookmark] do |f| %>
            <%= f.association :movie,
                              collection: Movie.all,
                              prompt: "Select a movie",
                              label: "Movie",
                              input_html: { class: 'form-select' } %>
            <%= f.input :comment,
                        as: :text,
                        placeholder: "Enter your thoughts about this movie...",
                        label: "Comment (at least 6 characters)",
                        input_html: { rows: 4 } %>
            <div class="d-flex gap-2">
              <%= f.button :submit, "Add Movie", class: "btn btn-primary" %>
              <%= link_to "Cancel", list_path(@list), class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
