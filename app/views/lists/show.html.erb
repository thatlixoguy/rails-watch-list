<div class="banner">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p><%= pluralize(@list.movies.count, 'movie') %> in this list</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <%= link_to "← Back to Lists", lists_path, class: "btn btn-secondary" %>
    <%= link_to "+ Add a movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
  </div>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="movie-card card">
          <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: bookmark.movie.title %>
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.movie.overview.truncate(120) %></p>
            <p class="text-muted mb-0">⭐ <%= bookmark.movie.rating %>/10</p>

            <% if bookmark.comment.present? %>
              <div class="user-comment">
                <small><strong>Your note:</strong> <%= bookmark.comment %></small>
              </div>
            <% end %>
          </div>
          <div class="card-footer">
            <%= link_to "Remove",
                        bookmark_path(bookmark),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "btn btn-danger btn-sm w-100" %>
          </div>
        </div>
      </div>
    <% end %>

    <% if @list.bookmarks.empty? %>
      <div class="col-12">
        <div class="alert alert-info">
          No movies in this list yet! Click "Add a movie" to get started.
        </div>
      </div>
    <% end %>
  </div>
</div>
